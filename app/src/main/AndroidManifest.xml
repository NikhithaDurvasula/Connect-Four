<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="game.nikhitha.connectfour">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.games.APP_ID" android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.appstate.APP_ID" android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <activity
            android:name="game.nikhitha.connectfour.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="game.nikhitha.connectfour.SettingsActivity"
            android:label="@string/preferences"
            android:parentActivityName="game.nikhitha.connectfour.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="game.nikhitha.connectfour.MainActivity" />
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="aae49ea33f04d1ac899dabb042b0d6c8e38371c5"
            />

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>